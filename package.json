{
	"name": "ecdysis-agent",
	"displayName": "Ecdysis Agent",
	"description": "A VS Code plugin that enhances coding with AI-powered automation, multi-model support, and experimental features.",
	"publisher": "ecdysis-xyz",
	"version": "1.0.0",
	"icon": "assets/icons/rocket.png",
	"galleryBanner": {
		"color": "#617A91",
		"theme": "dark"
	},
	"engines": {
		"vscode": "^1.84.0"
	},
	"author": {
		"name": "Ecdysis"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ecdysis-xyz-bot/Ecdysis-Agent"
	},
	"homepage": "https://github.com/ecdysis-xyz-bot/Ecdysis-Agent",
	"categories": [
		"AI",
		"Chat",
		"Programming Languages",
		"Education",
		"Snippets",
		"Testing"
	],
	"keywords": [
		"cline",
		"claude",
		"dev",
		"mcp",
		"openrouter",
		"coding",
		"agent",
		"autonomous",
		"chatgpt",
		"sonnet",
		"ai",
		"llama",
		"roo code",
		"roocode"
	],
	"activationEvents": [
		"onLanguage",
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "ecdysis-agent-ActivityBar",
					"title": "Ecdysis Agent",
					"icon": "$(rocket)"
				}
			]
		},
		"views": {
			"ecdysis-agent-ActivityBar": [
				{
					"type": "webview",
					"id": "ecdysis-agent.SidebarProvider",
					"name": ""
				}
			]
		},
		"commands": [
			{
				"command": "ecdysis-agent.plusButtonClicked",
				"title": "New Task",
				"icon": "$(add)"
			},
			{
				"command": "ecdysis-agent.mcpButtonClicked",
				"title": "MCP Servers",
				"icon": "$(server)"
			},
			{
				"command": "ecdysis-agent.promptsButtonClicked",
				"title": "Prompts",
				"icon": "$(notebook)"
			},
			{
				"command": "ecdysis-agent.historyButtonClicked",
				"title": "History",
				"icon": "$(history)"
			},
			{
				"command": "ecdysis-agent.popoutButtonClicked",
				"title": "Open in Editor",
				"icon": "$(link-external)"
			},
			{
				"command": "ecdysis-agent.settingsButtonClicked",
				"title": "Settings",
				"icon": "$(settings-gear)"
			},
			{
				"command": "ecdysis-agent.openInNewTab",
				"title": "Open In New Tab",
				"category": "Ecdysis Agent"
			},
			{
				"command": "ecdysis-agent.explainCode",
				"title": "Ecdysis Agent: Explain Code",
				"category": "Ecdysis Agent"
			},
			{
				"command": "ecdysis-agent.fixCode",
				"title": "Ecdysis Agent: Fix Code",
				"category": "Ecdysis Agent"
			},
			{
				"command": "ecdysis-agent.improveCode",
				"title": "Ecdysis Agent: Improve Code",
				"category": "Ecdysis Agent"
			},
			{
				"command": "ecdysis-agent.addToContext",
				"title": "Ecdysis Agent: Add To Context",
				"category": "Ecdysis Agent"
			},
			{
				"command": "ecdysis-agent.terminalAddToContext",
				"title": "Ecdysis Agent: Add Terminal Content to Context",
				"category": "Terminal"
			},
			{
				"command": "ecdysis-agent.terminalFixCommand",
				"title": "Ecdysis Agent: Fix This Command",
				"category": "Terminal"
			},
			{
				"command": "ecdysis-agent.terminalExplainCommand",
				"title": "Ecdysis Agent: Explain This Command",
				"category": "Terminal"
			},
			{
				"command": "ecdysis-agent.terminalFixCommandInCurrentTask",
				"title": "Ecdysis Agent: Fix This Command (Current Task)",
				"category": "Terminal"
			},
			{
				"command": "ecdysis-agent.terminalExplainCommandInCurrentTask",
				"title": "Ecdysis Agent: Explain This Command (Current Task)",
				"category": "Terminal"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "ecdysis-agent.explainCode",
					"when": "editorHasSelection",
					"group": "Ecdysis Agent@1"
				},
				{
					"command": "ecdysis-agent.fixCode",
					"when": "editorHasSelection",
					"group": "Ecdysis Agent@2"
				},
				{
					"command": "ecdysis-agent.improveCode",
					"when": "editorHasSelection",
					"group": "Ecdysis Agent@3"
				},
				{
					"command": "ecdysis-agent.addToContext",
					"when": "editorHasSelection",
					"group": "Ecdysis Agent@4"
				}
			],
			"terminal/context": [
				{
					"command": "ecdysis-agent.terminalAddToContext",
					"group": "Ecdysis Agent@1"
				},
				{
					"command": "ecdysis-agent.terminalFixCommand",
					"group": "Ecdysis Agent@2"
				},
				{
					"command": "ecdysis-agent.terminalExplainCommand",
					"group": "Ecdysis Agent@3"
				},
				{
					"command": "ecdysis-agent.terminalFixCommandInCurrentTask",
					"group": "Ecdysis Agent@5"
				},
				{
					"command": "ecdysis-agent.terminalExplainCommandInCurrentTask",
					"group": "Ecdysis Agent@6"
				}
			],
			"view/title": [
				{
					"command": "ecdysis-agent.plusButtonClicked",
					"group": "navigation@1",
					"when": "view == ecdysis-agent.SidebarProvider"
				},
				{
					"command": "ecdysis-agent.promptsButtonClicked",
					"group": "navigation@2",
					"when": "view == ecdysis-agent.SidebarProvider"
				},
				{
					"command": "ecdysis-agent.mcpButtonClicked",
					"group": "navigation@3",
					"when": "view == ecdysis-agent.SidebarProvider"
				},
				{
					"command": "ecdysis-agent.historyButtonClicked",
					"group": "navigation@4",
					"when": "view == ecdysis-agent.SidebarProvider"
				},
				{
					"command": "ecdysis-agent.popoutButtonClicked",
					"group": "navigation@5",
					"when": "view == ecdysis-agent.SidebarProvider"
				},
				{
					"command": "ecdysis-agent.settingsButtonClicked",
					"group": "navigation@6",
					"when": "view == ecdysis-agent.SidebarProvider"
				}
			]
		},
		"configuration": {
			"title": "Ecdysis Agent",
			"properties": {
				"ecdysis-agent.allowedCommands": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [
						"npm test",
						"npm install",
						"tsc",
						"git log",
						"git diff",
						"git show"
					],
					"description": "Commands that can be auto-executed when 'Always approve execute operations' is enabled"
				}
			}
		}
	},
	"scripts": {
		"build": "npm run build:webview && npm run vsix",
		"build:webview": "cd webview-ui && npm run build",
		"changeset": "changeset",
		"check-types": "tsc --noEmit",
		"compile": "tsc -p . --outDir out && node esbuild.js",
		"compile:integration": "tsc -p tsconfig.integration.json",
		"install:all": "npm install && cd webview-ui && npm install",
		"lint": "eslint src --ext ts && npm run lint --prefix webview-ui",
		"lint-fix": "eslint src --ext ts --fix && npm run lint-fix --prefix webview-ui",
		"package": "npm run build:webview && npm run check-types && npm run lint && node esbuild.js --production",
		"pretest": "npm run compile && npm run compile:integration",
		"dev": "cd webview-ui && npm run dev",
		"test": "jest && npm run test:webview",
		"test:webview": "cd webview-ui && npm run test",
		"test:integration": "npm run build && npm run compile:integration && npx dotenvx run -f .env.integration -- vscode-test",
		"prepare": "husky",
		"publish:marketplace": "vsce publish && ovsx publish",
		"publish": "npm run build && changeset publish && npm install --package-lock-only",
		"version-packages": "changeset version && npm install --package-lock-only",
		"vscode:prepublish": "npm run package",
		"vsix": "rimraf bin && mkdirp bin && npx vsce package --out bin",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"watch-tests": "tsc -p . -w --outDir out"
	},
	"dependencies": {
		"@anthropic-ai/bedrock-sdk": "^0.10.2",
		"@anthropic-ai/sdk": "^0.26.0",
		"@anthropic-ai/vertex-sdk": "^0.4.1",
		"@aws-sdk/client-bedrock-runtime": "^3.706.0",
		"@google/generative-ai": "^0.18.0",
		"@mistralai/mistralai": "^1.3.6",
		"@modelcontextprotocol/sdk": "^1.0.1",
		"@types/clone-deep": "^4.0.4",
		"@types/pdf-parse": "^1.1.4",
		"@types/tmp": "^0.2.6",
		"@types/turndown": "^5.0.5",
		"@types/vscode": "^1.95.0",
		"@vscode/codicons": "^0.0.36",
		"axios": "^1.7.4",
		"cheerio": "^1.0.0",
		"chokidar": "^4.0.1",
		"clone-deep": "^4.0.1",
		"default-shell": "^2.2.0",
		"delay": "^6.0.0",
		"diff": "^5.2.0",
		"diff-match-patch": "^1.0.5",
		"fast-deep-equal": "^3.1.3",
		"fastest-levenshtein": "^1.0.16",
		"globby": "^14.0.2",
		"isbinaryfile": "^5.0.2",
		"mammoth": "^1.8.0",
		"monaco-vscode-textmate-theme-converter": "^0.1.7",
		"openai": "^4.78.1",
		"os-name": "^6.0.0",
		"p-wait-for": "^5.0.2",
		"pdf-parse": "^1.1.1",
		"puppeteer-chromium-resolver": "^23.0.0",
		"puppeteer-core": "^23.4.0",
		"serialize-error": "^11.0.3",
		"simple-git": "^3.27.0",
		"sound-play": "^1.1.0",
		"string-similarity": "^4.0.4",
		"strip-ansi": "^7.1.0",
		"tmp": "^0.2.3",
		"tree-sitter-wasms": "^0.1.11",
		"turndown": "^7.2.0",
		"web-tree-sitter": "^0.22.6",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.10",
		"@changesets/types": "^6.0.0",
		"@dotenvx/dotenvx": "^1.34.0",
		"@types/debug": "^4.1.12",
		"@types/diff": "^5.2.1",
		"@types/diff-match-patch": "^1.0.36",
		"@types/jest": "^29.5.14",
		"@types/mocha": "^10.0.7",
		"@types/node": "20.x",
		"@types/string-similarity": "^4.0.2",
		"@typescript-eslint/eslint-plugin": "^7.14.1",
		"@typescript-eslint/parser": "^7.11.0",
		"@vscode/test-cli": "^0.0.9",
		"@vscode/test-electron": "^2.4.0",
		"esbuild": "^0.24.0",
		"mkdirp": "^3.0.1",
		"rimraf": "^6.0.1",
		"eslint": "^8.57.0",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"jest-simple-dot-reporter": "^1.0.5",
		"lint-staged": "^15.2.11",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.4.2",
		"ts-jest": "^29.2.5",
		"typescript": "^5.4.5"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,css,md}": [
			"prettier --write"
		],
		"src/**/*.{ts,tsx}": [
			"npx eslint -c .eslintrc.json --max-warnings=0 --fix"
		],
		"webview-ui/**/*.{ts,tsx}": [
			"npx eslint -c webview-ui/.eslintrc.json --max-warnings=0 --fix"
		]
	}
}
